<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.sbs.lolHi.dao.MemberDao">

	<select id="login" resultType="Member" parameterType="Map">
		SELECT *
		FROM member
		WHERE loginId = #{loginId} AND
		loginPw = #{loginPw};
	</select>

	<insert id="join" parameterType="Map" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO member
		SET regDate = now(),
		updateDate = now(),
		loginId = #{loginId},
		loginPw = #{loginPw},
		loginEmail = #{loginEmail},
		`name` = #{name}
	</insert>
	
	<select id="getMemberByLoginId" resultType="Member" parameterType="String">
		SELECT *
		FROM member 
		WHERE loginId = #{loginId}
	</select>
	
	<select id="getMemberByName" resultType="Member" parameterType="String">
		SELECT *
		FROM member 
		WHERE `name` = #{name}
	</select>
	
	<select id="getMemberByEmail" resultType="Member" parameterType="String">
		SELECT *
		FROM member 
		WHERE `loginEmail` = #{loginEmail}
	</select>
	
	<select id="getMemberById" resultType="Member" parameterType = "int">
		SELECT *
		FROM member
		WHERE id = #{id}
	</select>
	
	<update id="doModify" parameterType="map">
		UPDATE member
		
		<set>
			updateDate = NOW(),
			
			<if test="name != null">
				`name` = #{name},
			</if>
			
			<if test="body != null">
				body = #{body},
			</if>
			
		</set>
		WHERE id = #{id}
	</update>
	
</mapper>