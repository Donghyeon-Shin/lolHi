<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.sbs.lolHi.dao.ReplyDao">

	<insert id="doWrite"  parameterType="map" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO reply
		<set>
			regDate = NOW(),
			updateDate = NOW(),
			<if test="memberId != null">
				memberId = #{memberId},
			</if>
			
			<if test="body != null">
				body = #{body},
			</if>
			
			<if test="relId != null">
				relId = #{relId},
			</if>
			
			<if test="relTypeCode != null">
				relTypeCode = #{relTypeCode},
			</if>
		</set>
	</insert>
	
	<select id="getForPrintRepliesById" resultMap="reply">
		SELECT R.*,
		M.name AS extra__writer
		FROM reply AS R
		INNER JOIN `member` AS M
		ON R.memberId = M.id
		WHERE relTypeCode = #{relTypeCode}
		AND relId = #{relId}
		ORDER BY id DESC
	</select>
	
	<select id="getReplyById" resultType="Reply">
		SELECT *
		FROM reply
		WHERE id = #{id}
	</select>
	
	<delete id="doDelete" >
		DELETE FROM reply
		WHERE id = #{id}
	</delete>
	
	<resultMap type="Reply" id="reply">
		<id property="id" column="id" />
		<id property="regDate" column="regDate" />
		<id property="updateDate" column="updateDate" />
		<id property="body" column="body" />
		<id property="memberId" column="memberId" />
		<id property="relId" column="relId" />
		<id property="relTypeCode" column="relTypeCode" />
		<association property="extra" javaType="map">
			<id property="writer" column="extra__writer" />
		</association>
	</resultMap>

</mapper>