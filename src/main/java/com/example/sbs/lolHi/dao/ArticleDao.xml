<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.sbs.lolHi.dao.ArticleDao">

	<select id="getForPrintArticlesById" resultMap="article">
		SELECT A.*,
		M.name AS extra__writer
		FROM article AS A
		INNER JOIN member AS M
		ON A.memberId = M.id
		<choose>
			<when test="searchType == 'title'">
				WHERE title LIKE CONCAT('%',#{searchKeyword},'%')
			</when>
			<when test="searchType == 'body'">
				WHERE body LIKE CONCAT('%',#{searchKeyword},'%')
			</when>
			<when test="searchType == 'titleAndBody'">
				WHERE title LIKE CONCAT('%',#{searchKeyword},'%') OR
				body LIKE CONCAT('%',#{searchKeyword},'%')
			</when>
		</choose>
		ORDER BY A.id DESC
		<if test="limitFrom != null and limitTake != null">
			LIMIT #{limitFrom}, #{limitTake}
		</if>
	</select>
	
	<select id="getForPrintArticleById" resultMap="article" >
		SELECT *
		FROM article
		WHERE id = #{id}
	</select>
	
	<delete id="doDeleteArticleById" parameterType="int" >
		DELETE FROM article
		WHERE id = #{id}
	</delete>

	<insert id="doWrite"  parameterType="map" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO article
		<set>
			regDate = NOW(),
			updateDate = NOW(),
			<if test="title != null">
				title = #{title},
			</if>
			
			<if test="body != null">
				body = #{body},
			</if>
			
			<if test="memberId != null">
				memberId = #{loginedMemberId},
			</if>
		</set>
	</insert>

	<update id="doModify" parameterType="map">
		UPDATE article
		
		<set>
			updateDate = NOW(),
			
			<if test="title != null">
				title = #{title},
			</if>
			
			<if test="body != null">
				body = #{body},
			</if>
			
		</set>
		WHERE id = #{id}
	</update>
	
	<select id="getTotalCount" resultType="int" >
		SELECT COUNT(*)
		FROM article
	</select>
	
	<resultMap type="Article" id="article">
		<id property="id" column="id" />
		<id property="regDate" column="regDate" />
		<id property="updateDate" column="updateDate" />
		<id property="delDate" column="delDate" />
		<id property="delStatus" column="delStatus" />
		<id property="title" column="title" />
		<id property="body" column="body" />
		<id property="memberId" column="memberId" />
		<id property="boardId" column="boardId" />
		<association property="extra" javaType="map">
			<id property="writer" column="extra__writer" />
		</association>
	</resultMap>
</mapper>