<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.sbs.lolHi.dao.ArticleDao">

	<select id="getArticles" resultType="Article">
		SELECT *
		FROM article
		<choose>
			<when test="searchType == 'title'">
				WHERE title LIKE CONCAT('%',#{searchKeyword},'%')
			</when>
			<when test="searchType == 'body'">
				WHERE body LIKE CONCAT('%',#{searchKeyword},'%')
			</when>
			<when test="searchType == 'titleAndBody'">
				WHERE title LIKE CONCAT('%',#{searchKeyword},'%') OR
				body LIKE CONCAT('%',#{searchKeyword},'%')
			</when>
		</choose>
		ORDER BY id DESC
		<if test="limitFrom != null and limitTake != null">
			LIMIT #{limitFrom}, #{limitTake}
		</if>
	</select>
	
	<select id="getArticle" resultType="Article" parameterType="int" >
		SELECT *
		FROM article
		WHERE id = #{id}
	</select>
	
	<delete id="doDeleteArticle" parameterType="int" >
		DELETE FROM article
		WHERE id = #{id}
	</delete>

	<insert id="write"  parameterType="map" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO article
		<set>
			regDate = NOW(),
			updateDate = NOW(),
			<if test="title != null">
				title = #{title},
			</if>
			
			<if test="body != null">
				body = #{body},
			</if>
			
			<if test="memberId != null">
				memberId = #{loginedMemberId},
			</if>
		</set>
	</insert>

	<update id="modify" parameterType="map">
		UPDATE article
		
		<set>
			updateDate = NOW(),
			
			<if test="title != null">
				title = #{title},
			</if>
			
			<if test="body != null">
				body = #{body},
			</if>
			
		</set>
		WHERE id = #{id}
	</update>
	
	<select id="getArticlesCount" resultType="int" >
		SELECT COUNT(*)
		FROM article
	</select>
</mapper>